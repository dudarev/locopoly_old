%html{ :lang => "en" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %script{:type => "text/javascript", :src  => "static/scripts/map.js"}
    %script{:type => "text/javascript", :src  => "http://maps.google.com/maps/api/js?sensor=false&language=en"}
    %title
      Locopoly
    /
      Framework CSS
    %link{ :href => "static/styles/screen.css", :rel => "stylesheet", :media => "screen, projection", :type => "text/css" }
    %link{ :href => "static/styles/print.css", :rel => "stylesheet", :media => "print", :type => "text/css" }
    /
      [if IE]><link rel="stylesheet" href="static/styles/ie.css" type="text/css" media="screen, projection"><![endif]
  %body.blueprint{ :onload => 'initialize_map()'} 

    #header
      .container
        %h1 
          %a.header-link(href="index.html") Locopoly

    #content
      #map-container
        #map-canvas
      #sidebar
